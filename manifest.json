{
  "manifest_version": 2,
  "name": "Work Tracker",
  "version": "1.0",
  "description": "Track work tasks and log them with time",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "notifications"
  ]
}
